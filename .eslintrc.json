{
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module",
    "allowImportExportEverywhere": true
  },
  "extends": ["airbnb"],
  "env": {
    "browser": true,
    "mocha": true,
    "node": true,
    "jest": true
  },
  "root": true,
  "plugins": ["react", "jsx-a11y", "import"],
  "rules": {
    "quotes": 2,
    "no-underscore-dangle": 0,
    "camelcase": 0,
    "max-len": 0,
    "arrow-parens": ["off"],
    "no-trailing-spaces": [
      2,
      {
        "skipBlankLines": true
      }
    ],
    "no-use-before-define": 0,
    "space-before-function-paren": 0,
    "func-names": 0,
    "strict": 0,
    "no-unused-expressions": 0,
    "no-param-reassign": 0,
    "prefer-template": 1,
    "consistent-return": 0,
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [".js", ".jsx"]
      }
    ],
    "jsx-a11y/anchor-is-valid": [
      "error",
      {
        "components": ["Link"],
        "specialLink": ["hrefLeft", "hrefRight", "to"],
        "aspects": ["noHref", "invalidHref", "preferButton"]
      }
    ]
  }
}
